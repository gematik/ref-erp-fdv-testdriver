<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE configuration>

<configuration>
    <import class="ch.qos.logback.classic.encoder.PatternLayoutEncoder"/>
    <import class="ch.qos.logback.core.ConsoleAppender"/>

    <variable name="date_format" value="%d{HH:mm:ss.SSS}"/>

    <appender name="STDOUT" class="ConsoleAppender">
        <encoder class="PatternLayoutEncoder">
            <pattern>${date_format} %highlight(%-5level) [%thread] %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>


    <logger name="de.gematik.test.erezept.remotefdv" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="de.gematik.test.erezept.client" level="TRACE" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="de.gematik.bbriccs" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="de.gematik.bbriccs.smartcards" level="TRACE" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="org.eclipse.jetty" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- turn off some noisy loggers -->
    <logger name="ca.uhn.fhir.parser.LenientErrorHandler" level="OFF"/>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>